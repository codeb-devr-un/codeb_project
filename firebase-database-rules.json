{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "users": {
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid || (auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin')",
        "isOnline": {
          ".write": "$uid === auth.uid"
        },
        "lastLogin": {
          ".write": "$uid === auth.uid"
        }
      }
    },
    "projects": {
      "$projectId": {
        ".read": "auth != null && (root.child('users').child(auth.uid).child('role').val() !== 'external' || root.child('externalUsers').child(auth.uid).child('projectIds').child($projectId).exists())",
        ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() !== 'external'"
      }
    },
    "projectInvitations": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() !== 'external'",
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() !== 'external'",
      "$invitationId": {
        ".read": true,
        ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || root.child('users').child(auth.uid).child('role').val() === 'manager')"
      }
    },
    "externalUsers": {
      "$uid": {
        ".read": "$uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'",
        ".write": "auth != null"
      }
    },
    "chatRooms": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() !== 'external'"
      }
    },
    "messages": {
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() !== 'external'",
        "$messageId": {
          ".validate": "newData.hasChildren(['senderId', 'message', 'timestamp'])"
        }
      }
    },
    "typing": {
      "$roomId": {
        "$userId": {
          ".read": "auth != null",
          ".write": "$userId === auth.uid"
        }
      }
    },
    "notifications": {
      "$userId": {
        ".read": "$userId === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'",
        ".write": "auth != null",
        ".indexOn": ["time", "read", "createdAt"]
      }
    },
    "operators": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$operatorId": {
        ".read": "auth != null",
        ".write": "$operatorId === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'",
        ".indexOn": ["isOnline", "isAvailable", "activeChats", "lastSeen"]
      }
    },
    "chatAssignments": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["operatorId", "customerId", "status", "createdAt"]
    },
    "chatRequests": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["status", "createdAt"]
    },
    "customerAssignments": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$customerId": {
        ".read": "$customerId === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'",
        ".write": "auth != null"
      }
    },
    "tasks": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["status", "priority", "assignee", "projectId", "createdAt"]
    },
    "activities": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["projectId", "timestamp", "type"]
    },
    "stats": {
      ".read": "auth != null",
      ".write": "auth != null",
      "daily": {
        "$userId": {
          ".read": "$userId === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'",
          ".write": "$userId === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'"
        }
      }
    }
  }
}