# WorkB CMS Production Environment Variables
# Copy this file to /etc/containers/systemd/workb-cms.env

# Database Configuration
DATABASE_URL=postgresql://workb:YOUR_PASSWORD@workb-cms-postgres:5432/workb_cms?schema=public

# NextAuth Configuration
NEXTAUTH_URL=https://workb.net
NEXTAUTH_SECRET=your-nextauth-secret-min-32-characters-long

# Redis Configuration
REDIS_URL=redis://workb-cms-redis:6379

# Application Configuration
NEXT_PUBLIC_SOCKET_URL=https://workb.net
NEXT_PUBLIC_WORKFLOW_API_URL=https://workb.net/api

# AI Configuration
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# Email Configuration (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# Node Environment
NODE_ENV=production
