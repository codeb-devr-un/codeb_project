# WorkB CMS Staging Environment Variables
# Copy this file to /etc/containers/systemd/workb-cms-staging.env

# Database Configuration
DATABASE_URL=postgresql://workb:YOUR_PASSWORD@workb-cms-postgres:5432/workb_cms_staging?schema=public

# NextAuth Configuration
NEXTAUTH_URL=https://workb-staging.codeb.dev
NEXTAUTH_SECRET=your-staging-nextauth-secret-min-32-chars

# Redis Configuration
REDIS_URL=redis://workb-cms-redis:6379/1

# Application Configuration
NEXT_PUBLIC_SOCKET_URL=https://workb-staging.codeb.dev
NEXT_PUBLIC_WORKFLOW_API_URL=https://workb-staging.codeb.dev/api

# AI Configuration
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# Email Configuration (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# Node Environment
NODE_ENV=staging
